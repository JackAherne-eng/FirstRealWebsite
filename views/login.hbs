{{> welcomemenu id='login' }}

<div class="ui attached message" id="welcome">
  <div class="header">
    Welcome back!
    </div>
    <p>What new Animes have you watched recently?</p>
</div>
<form class="ui form attached fluid segment" action="/authenticate" method="POST">
  <div class="field">
    <label>Email</label> <input placeholder="Email" name="email" autofocus required>
  </div>
  <div class="field">
    <label>Password</label> <input type="password"  name="password" required >
  </div>
  <button class="ui blue submit button">Login</button>
</form>
<div class="ui bottom attached warning message">
  <i class="icon help"></i>
  Haven't signed up? <a href="/signup">Sign up here</a> instead.
</div>