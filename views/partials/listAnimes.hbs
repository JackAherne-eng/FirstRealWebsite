{{#unless AnimeList.Animes}}
  <h3 class="ui center aligned message">It's very quiet in here... start adding some Animes!</h3>
{{/unless}}

{{#if AnimeList.Animes}}

<table class="ui fixed striped table">
  <thead>
    <tr>
      <th class="four wide">Anime</th>
      <th class="four wide">Artist</th>
      <th class="three wide">Type</th>
      <th class="three wide">Duration</th>
      <th class="one wide"> </th>
      <th class="one wide"> </th>
    </tr>
  </thead>
<tbody>
    {{#each AnimeList.Animes}}
    <form class = "ui form" action="/AnimeList/{{../AnimeList.id}}/updateAnime/{{id}}" method="POST">
    <tr class="fields">
      <td class="field">
        <span class="ui input">
         <input placeholder="Title" type="text" size="30" name="title" autofocus required value = "{{capitalise title}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Artist" type="text" size="30" name="artist" required value = "{{capitalise artist}}">
        </span>
      </td>
      <td class="field">
        <span class="ui input">
          <select name="type" id="type" style="padding:.6em 2.5em; border:solid lightgray 1px;border-radius:5px;">
            <option value="{{type}}" selected="selected">{{type}}</option>
              {{{populate type}}}       
          </select>       
        </span>      
      </td>
      <td class="field">
        <span class="ui input">
          <input placeholder="Duration" type="text" size="30" name="duration" required value = "{{capitalise duration}}">
        </span>
      </td>
      <td class="center aligned">
        <button class="ui submit icon button"><i class="icon pencil alternate"></i></button>
      </td>
      <td class="center aligned">
        <a href="/AnimeList/{{../AnimeList.id}}/deleteAnime/{{id}}" class="ui icon button delAnime">
          <i class="icon trash"></i>
        </a>
      </td>
    </tr>
    </form> 
    {{/each}}
  </tbody>
</table>

<p>
  <span id="rating"> </span>
</p>

<button class="ui blue button" onclick="getRating()">
  Rate it! <i class="star icon"></i>
</button>

{{/if}}